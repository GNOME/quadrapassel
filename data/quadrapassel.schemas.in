<gconfschemafile>

  <schemalist>
    <schema>
      <key>/schemas/apps/quadrapassel/options/block_pixmap</key>
      <applyto>/apps/quadrapassel/options/block_pixmap</applyto>
      <owner>quadrapassel</owner>
      <type>string</type> 
      <default>7blocks-gw.png</default>
      <locale name="C">
        <short>Image to use for drawing blocks</short>
        <long>Image to use for drawing blocks.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/theme</key>
      <applyto>/apps/quadrapassel/options/theme</applyto>
      <owner>quadrapassel</owner>
      <type>string</type> 
      <default>tangoshaded</default>
      <locale name="C">
        <short>The theme used for rendering the blocks</short>
        <long>The name of the theme used for rendering the blocks and the background.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/starting_level</key>
      <applyto>/apps/quadrapassel/options/starting_level</applyto>
      <owner>quadrapassel</owner>
      <type>int</type> 
      <default>1</default>
      <locale name="C">
        <short>Level to start with</short>
        <long>Level to start with.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/usebgimage</key>
      <applyto>/apps/quadrapassel/options/usebgimage</applyto>
      <owner>quadrapassel</owner>
      <type>bool</type> 
      <default>TRUE</default>
      <locale name="C">
        <short>Whether to use the background image</short>
        <long>This selects whether or not to draw the background image over the background color.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/bgcolor</key>
      <applyto>/apps/quadrapassel/options/bgcolor</applyto>
      <owner>quadrapassel</owner>
      <type>string</type> 
      <default>Black</default>
      <locale name="C">
        <short>The background color</short>
        <long>The background color, in a format gdk_color_parse understands.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/do_preview</key>
      <applyto>/apps/quadrapassel/options/do_preview</applyto>
      <owner>quadrapassel</owner>
      <type>bool</type> 
      <default>TRUE</default>
      <locale name="C">
        <short>Whether to preview the next block</short>
        <long>Whether to preview the next block.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/do_preview</key>
      <applyto>/apps/quadrapassel/options/do_preview</applyto>
      <owner>quadrapassel</owner>
      <type>bool</type> 
      <default>TRUE</default>
      <locale name="C">
        <short>Whether to preview the next block</short>
        <long>Whether to preview the next block.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/use_target</key>
      <applyto>/apps/quadrapassel/options/use_target</applyto>
      <owner>quadrapassel</owner>
      <type>bool</type> 
      <default>FALSE</default>
      <locale name="C">
        <short>Whether to provide a target</short>
        <long>Whether to provide a graphical representation of where a block will land.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/random_block_colors</key>
      <applyto>/apps/quadrapassel/options/random_block_colors</applyto>
      <owner>quadrapassel</owner>
      <type>bool</type> 
      <default>FALSE</default>
      <locale name="C">
        <short>Whether to give blocks random colors</short>
        <long>Whether to give blocks random colors.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/rotate_counter_clock_wise</key>
      <applyto>/apps/quadrapassel/options/rotate_counter_clock_wise</applyto>
      <owner>quadrapassel</owner>
      <type>bool</type> 
      <default>TRUE</default>
      <locale name="C">
        <short>Whether to rotate counter clock wise</short>
        <long>Whether to rotate counter clock wise.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/line_fill_height</key>
      <applyto>/apps/quadrapassel/options/line_fill_height</applyto>
      <owner>quadrapassel</owner>
      <type>int</type> 
      <default>0</default>
      <locale name="C">
        <short>The number of rows to fill</short>
        <long>The number of rows that are filled with random blocks at the start of the game.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/options/line_fill_probability</key>
      <applyto>/apps/quadrapassel/options/line_fill_probability</applyto>
      <owner>quadrapassel</owner>
      <type>int</type> 
      <default>5</default>
      <locale name="C">
        <short>The density of filled rows</short>
        <long>The density of blocks in rows filled at the start of the game. The value is between 0 (for no blocks) and 10 (for a completely filled row).</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/controls/key_left</key>
      <applyto>/apps/quadrapassel/controls/key_left</applyto>
      <owner>quadrapassel</owner>
      <type>int</type>
      <default>65361</default>
      <locale name="C">
        <short>Move left</short>
        <long>Key press to move left.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/controls/key_right</key>
      <applyto>/apps/quadrapassel/controls/key_right</applyto>
      <owner>quadrapassel</owner>
      <type>int</type>
      <default>65363</default>
      <locale name="C">
        <short>Move right</short>
        <long>Key press to move right.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/controls/key_down</key>
      <applyto>/apps/quadrapassel/controls/key_down</applyto>
      <owner>quadrapassel</owner>
      <type>int</type>
      <default>65364</default>
      <locale name="C">
        <short>Move down</short>
        <long>Key press to move down.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/controls/key_drop</key>
      <applyto>/apps/quadrapassel/controls/key_drop</applyto>
      <owner>quadrapassel</owner>
      <type>int</type>
      <default>32</default>
      <locale name="C">
        <short>Drop</short>
        <long>Key press to drop.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/controls/key_rotate</key>
      <applyto>/apps/quadrapassel/controls/key_rotate</applyto>
      <owner>quadrapassel</owner>
      <type>int</type>
      <default>65362</default>
      <locale name="C">
        <short>Rotate</short>
        <long>Key press to rotate.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/quadrapassel/controls/key_pause</key>
      <applyto>/apps/quadrapassel/controls/key_pause</applyto>
      <owner>quadrapassel</owner>
      <type>int</type>
      <default>65299</default>
      <locale name="C">
        <short>Pause</short>
        <long>Key press to pause.</long>
      </locale>
    </schema>

  </schemalist>

</gconfschemafile>
